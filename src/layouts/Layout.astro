---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'sidefyn GmbH',
  description = 'Die sidefyn GmbH ist eine junge Webauftritt und Multimedia Firma in der Region Bern und Zürich. Wir gestalten und entwickeln deine Webseite mit bester Qualität.',
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="sidefyn GmbH" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#294053" />
    <meta property="og:title" content="sidefyn GmbH" />
    <meta property="og:type" content="company" />
    <meta property="og:url" content="https://www.sidefyn.ch/" />
    <meta property="og:image" content="https://www.sidefyn.ch/img/logo/sidefyn.png" />
    <link rel="icon" type="image/png" href="/img/icon/favicon.png" />
    <link rel="canonical" href="https://www.sidefyn.ch/" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Marcellus+SC&family=Oxygen:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900">
    <slot />
  </body>
</html>
