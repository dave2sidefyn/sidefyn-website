---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'sidefyn GmbH',
  description = 'Die sidefyn GmbH ist eine junge Webauftritt und Multimedia Firma in Bern. Wir gestalten und entwickeln deine Webseite mit bester QualitÃ¤t.',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const siteUrl = (Astro.site?.toString() ?? 'https://sidefyn.ch').replace(/\/$/, '');
const assetUrl = (path: string) => new URL(path.replace(/^\//, ''), `${siteUrl}${base}`).toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="sidefyn GmbH" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#294053" />
    <meta property="og:title" content="sidefyn GmbH" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl + base} />
    <meta property="og:image" content={assetUrl('/img/logo/sidefyn.webp')} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="canonical" href={siteUrl + base} />
    <link rel="preload" href="/fonts/oxygen-400.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/oxygen-700.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/img/background/background-head2.webp" as="image" />
    <link rel="preload" href="/img/logo/sidefyn.webp" as="image" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900">
    <slot />
  </body>
</html>
